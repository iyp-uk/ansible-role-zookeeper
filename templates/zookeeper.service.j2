# {{ansible_managed}}

[Unit]
Description=zookeeper
After=network.target
Wants=network.target

[Service]
Type=simple
User=zookeeper
Group=zookeeper
ExecStart={{ zookeeper_dir }}/bin/zkServer.sh start-foreground
ExecStop={{ zookeeper_dir }}/bin/zkServer.sh stop
Restart=always

[Install]
WantedBy=multi-user.target
